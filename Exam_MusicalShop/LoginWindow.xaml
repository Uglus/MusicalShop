<Window x:Class="Exam_MusicalShop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_MusicalShop"
        mc:Ignorable="d"
        Title="LoginWindow" Height="250" Width="400">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="40,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="BoxLogin" HorizontalAlignment="Left" Height="23" Margin="40,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="40,94,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="BoxPassword" HorizontalAlignment="Left" Height="23" Margin="40,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="BtnClear" HorizontalAlignment="Left" Margin="240,50,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="BtnEnter" Content="Enter" HorizontalAlignment="Left" Margin="240,125,0,0" VerticalAlignment="Top" Width="75" Click="BtnEnter_Click"/>

    </Grid>
</Window>
